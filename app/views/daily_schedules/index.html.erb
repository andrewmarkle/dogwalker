<p id="notice"><%= notice %></p>

<h1>Listing Daily Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Date and time</th>
      <th>Dog name</th>
      <th>People name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_schedules.each do |daily_schedule| %>
      <tr>
        <td><%= daily_schedule.date_and_time %></td>
        <td><%= daily_schedule.dog_name %></td>
        <td><%= daily_schedule.people_name %></td>
        <td><%= link_to 'Show', daily_schedule %></td>
        <td><%= link_to 'Edit', edit_daily_schedule_path(daily_schedule) %></td>
        <td><%= link_to 'Destroy', daily_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

